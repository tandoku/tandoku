<Window x:Class="reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:reader"
        mc:Ignorable="d"
        Title="Tandoku Reader" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="_image" Grid.Column="0"></Image>
        <StackPanel Width="650" Grid.Column="1">
            <TextBox x:Name="_textBox" TextWrapping="Wrap" FontSize="18" SelectionChanged="TextBox_SelectionChanged"></TextBox>
            <TextBox x:Name="_dictionary" TextWrapping="Wrap" FontSize="18"></TextBox>
        </StackPanel>
    </Grid>
</Window>
